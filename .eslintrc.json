{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "airbnb-base"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "lines-between-class-members": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "comma-dangle": "off"
    }
}
